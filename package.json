{
  "name": "vimium-d",
  "version": "1.0.0",
  "description": "Eine Vimium-ähnliche Chrome-Extension für effiziente Tastaturnavigation",
  "main": "background.js",
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "package": "npm run build && zip -r vimium-d.zip dist/ -x '*.git*' 'node_modules/*' '*.DS_Store'"
  },
  "keywords": [
    "chrome-extension",
    "vimium",
    "keyboard-navigation",
    "browser-extension",
    "vim",
    "productivity",
    "typescript"
  ],
  "author": "Dennis Barzanoff",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dennisbarzanoff/vimium-d.git"
  },
  "bugs": {
    "url": "https://github.com/dennisbarzanoff/vimium-d/issues"
  },
  "homepage": "https://github.com/dennisbarzanoff/vimium-d#readme",
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@types/chrome": "^0.0.254",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.55.0",
    "happy-dom": "^18.0.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.3.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "Chrome >= 88"
  ]
}
